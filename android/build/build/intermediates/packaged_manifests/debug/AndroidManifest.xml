<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.finepointcgi.PlayServicesTutorial"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" > <!-- glEsVersion is modified by the exporter, changing this value here has no effect. -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <instrumentation
        android:name=".GodotInstrumentation"
        android:icon="@mipmap/icon"
        android:label="@string/godot_project_name_string"
        android:targetPackage="org.finepointcgi.PlayServicesTutorial" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:hasFragileUserData="false"
        android:icon="@mipmap/icon"
        android:isGame="true"
        android:label="@string/godot_project_name_string"
        android:requestLegacyExternalStorage="false" >
        <activity
            android:name="com.godot.game.GodotApp"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|density|keyboard|navigation|screenLayout|uiMode"
            android:excludeFromRecents="false"
            android:label="@string/godot_project_name_string"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="landscape"
            android:theme="@style/GodotAppSplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!--
                Enable access to OpenXR on Oculus mobile devices, no-op on other Android
                platforms.
                -->
                <category android:name="com.oculus.intent.category.VR" />
            </intent-filter>
        </activity>
        <!-- Records the version of the Godot editor used for building -->
        <meta-data
            android:name="org.godotengine.editor.version"
            android:value="3.4.2.stable" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- Records the version of the Godot library -->
        <meta-data
            android:name="org.godotengine.library.version"
            android:value="3.4.2.stable" />

        <service android:name="org.godotengine.godot.GodotDownloaderService" />

        <meta-data
            android:name="org.godotengine.plugin.v1.GodotPlayGamesServices"
            android:value="io.cgisca.godot.gpgs.PlayGameServicesGodot" />

        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION"
            android:visibleToInstantApps="true" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>